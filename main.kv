ScreenManager:
    md_bg_color: 255/255,255/255,255/255,1

<SplashScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
        Image:
            source:"images/BeSUS.png"
            size_hint: 0.9, 0.9
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
<HomeScreen>:
    #setting background color
    canvas.before:
        Color:
            rgba: 255/255,255/255,255/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDIcon:
                    icon:"images/BeSUS.png"
                    size_hint: .5, .5
                    pos_hint: {"center_x": .085}
                    font_size: '120dp' 
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            ElementCard:
                image:"images/calendar.png"
                text:"Time Wasted"
                items_count:"3 Events"

            ElementCard:
                image:"images/food.png"
                text:"Challenges"
                items_count:"5 Challenges"
                on_release: app.root.current = 'challenges'
                
            ElementCard:
                image:"images/map.png"
                text:"Friends"
                items_count:""
                on_release: app.root.current = 'friends'
            ElementCard:
                image:"images/festival.png"
                text:"Pictures"
                items_count:""
            ElementCard:
                image:"images/todo.png"
                text:"To Do"
                items_count:"4 Items"    
            ElementCard:
                image:"images/setting.png"
                items_count:"4 Items"

<ChallengesScreen>:
    #changing background color
    canvas.before:
        Color:
            rgba: 255/255,255/255,255/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"BeSus"
                    font_style:"H4"
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
            MDIconButton:
                icon:"images/return-icon.png"
                on_release: root.manager.current = "home"
        ScrollView:
            MDGridLayout:
                size_hint_y:2
                cols:1
                padding:[dp(15),dp(15),dp(15),dp(35)]
                spacing:dp(15)
                ChallengeCard:
                    image:"images/tree.png"
                    text:"Plant a tree"
                    on_release: root.manager.current = "newchallenge"

                ChallengeCard:
                    image:"images/food.png"
                    text:"Buy Local Food"

                ChallengeCard:
                    image:"images/food.png"
                    text:"Eat organic food"

                ChallengeCard:
                    image:"images/bus.png"
                    text:"Use public transport"

                ChallengeCard:
                    image:"images/recycle.png"
                    text:"Seperate the trash"

