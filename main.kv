# 56, 40, 81
ScreenManager:
    md_bg_color: 255/255,255/255,255/255,1
<HomeScreen>:
    #setting background color
    canvas.before:
        Color:
            rgba: 255/255,255/255,255/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDIcon:
                    icon:"images/BeSUS.png"
                    size_hint: .5, .5
                    pos_hint: {"center_x": .085}
                    font_size: '120dp' 
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            ElementCard:
                image:"images/calendar.png"
                text:"Time Wasted"
                items_count:"3 Events"

            ElementCard:
                image:"images/food.png"
                text:"Challenges"
                items_count:"4 Items"
                on_release: app.root.current = 'challenges'

            ElementCard:
                image:"images/map.png"
                text:"Friends"
                items_count:""
            ElementCard:
                image:"images/festival.png"
                text:"Pictures"
                items_count:""
            ElementCard:
                image:"images/todo.png"
                text:"To Do"
                items_count:"4 Items"    
            ElementCard:
                image:"images/setting.png"
                items_count:"4 Items"

<ChallengesScreen>:
    #changing background color
    canvas.before:
        Color:
            rgba: 255/255,255/255,255/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"BeSus"
                    font_style:"H4"
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
                    MDLabel:
                        text:"Home"
                        text_size:None,None
                        adaptive_width:True
                    MDIcon:
                        icon:'chevron-down'

            MDIconButton:
                icon:"images/home.png"
                on_release: root.manager.current = "home"
        ScrollView:
            MDGridLayout:
                size_hint_y:2
                cols:1
                padding:[dp(15),dp(15),dp(15),dp(35)]
                spacing:dp(15)
                ChallengeCard:
                    image:"images/calendar.png"
                    text:"Plant a tree"
                    on_release: print("Challange: Plant a tree started")

                ChallengeCard:
                    image:"images/food.png"
                    text:"Groceries"

                ChallengeCard:
                    image:"images/map.png"
                    text:"Location"

                ChallengeCard:
                    image:"images/festival.png"
                    text:"Activity"

                ChallengeCard:
                    image:"images/todo.png"
                    text:"To Do"

                ChallengeCard:
                    image:"images/home.png"
                    text:"Home"
                    on_release: root.manager.current = "home"

<NewChallengeScreen>:
    canvas.before:
        Color:
            rgba: 255/255,255/255,255/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    # Show a picture or text of challange and accept button
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"BeSus"
                    font_style:"H4"
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
                    MDLabel:
                        text:"Home"
                        text_size:None,None
                        adaptive_width:True
                    MDIcon:
                        icon:'chevron-down'

            MDIconButton:
                icon:"images/notification.png"

<ElementCard>:
    md_bg_color:165/255,202/255,122/255
    line_color:(0.2, 0.2, 0.2, 0.8)
    style:"elevated"
    shadow_softness:4
    shadow_offset:(2, 2) 
    padding:dp(15)
    spacing:dp(15)
    radius:dp(25)
    ripple_behavior: True
    image:''
    text:""
    items_count:""
    subtext:''

    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style:"H6"
        MDLabel:
            halign:"center"
            font_style:"Caption"
            text:root.subtext
        MDLabel:
            halign:"center"
            text:root.items_count


<ChallengeCard>:
    md_bg_color:70/255,120/255,13/255
    padding:dp(15)
    spacing:dp(15)
    radius:dp(25)
    ripple_behavior: True
    image:''
    text:""
    items_count:""
    subtext:''

    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style:"H6"
