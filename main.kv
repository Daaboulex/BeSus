        source: root.image
        size_hint_y:2
        pos_hint : {"center_x": .5, "center_y": .75}        
    MDLabel:
        halign:"center"
        text:root.text
        font_style:"H4"
        valign:"bottom"
    MDLabel:
        halign:"center"
        valign:"bottom"
        text:root.points
        font_style:"H3"
