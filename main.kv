# 56, 40, 81
ScreenManager:
    md_bg_color: 255/255,255/255,255/255,1
<HomeScreen>:
    #setting background color
    canvas.before:
        Color:
            rgba: 255/255,255/255,255/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"BeSus"
                    font_style:"H4"
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
                    MDLabel:
                        text:"Home"
                        text_size:None,None
                        adaptive_width:True
                    #MDIcon:
                    #    icon:'chevron-down'
            MDIconButton:
                icon:"images/BeSUS.png"
                icon_size: "120sp"
                icon_color: app.theme_cls.primary_color
        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)
            ElementCard:
                image:"images/calendar.png"
                text:"Time Wasted"
                #subtext:"March, Wednesday"
                items_count:"3 Events"

            ElementCard:
                image:"images/food.png"
                text:"Challenges"
                #subtext:"Broccoli, Apple"
                items_count:"4 Items"
                on_release: app.root.current = 'challenges'

            ElementCard:
                image:"images/map.png"
                text:"Friends"
                #subtext:"Lucy Mao going to Office"
                items_count:""

            ElementCard:
                image:"images/festival.png"
                text:"Pictures"
                items_count:""
                #subtext:"Rose favorite your Post"

            ElementCard:
                image:"images/todo.png"
                text:"To Do"
                #subtext:"Homework, Design"
                items_count:"4 Items"    
            ElementCard:
                image:"images/setting.png"
                text:"Setting"
                #subtext:""
                items_count:"4 Items"

<ChallengesScreen>:
    #changing background color
    canvas.before:
        Color:
            rgba: 255/255,255/255,255/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"BeSus"
                    font_style:"H4"
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
                    MDLabel:
                        text:"Home"
                        text_size:None,None
                        adaptive_width:True
                    MDIcon:
                        icon:'chevron-down'

            MDIconButton:
                icon:"images/notification.png"
        ScrollView:
            MDGridLayout:
                size_hint_y:2
                cols:1
                padding:[dp(15),dp(15),dp(15),dp(35)]
                spacing:dp(15)
                ElementCard:
                    image:"images/calendar.png"
                    text:"Plant a tree"
                    subtext:"March, Wednesday"
                    items_count:"3 Events"
                    #on_release: 
                    #    root.manager.current = "new_challenge"

                ElementCard:
                    image:"images/food.png"
                    text:"Groceries"
                    subtext:"Broccoli, Apple"
                    items_count:"4 Items"

                ElementCard:
                    image:"images/map.png"
                    text:"Location"
                    subtext:"Lucy Mao going to Office"
                    items_count:""

                ElementCard:
                    image:"images/festival.png"
                    text:"Activity"
                    items_count:""
                    subtext:"Rose favorite your Post"

                ElementCard:
                    image:"images/todo.png"
                    text:"To Do"
                    subtext:"Homework, Design"
                    items_count:"4 Items"

                ElementCard:
                    image:"images/home.png"
                    text:"Home"
                    subtext:""
                    on_release: root.manager.current = "home"

<NewChallengeScreen>:
    canvas.before:
        Color:
            rgba: 255/255,255/255,255/255,1
        Rectangle:
            pos: self.pos
            size: self.size
    # Show a picture or text of challange and accept button
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"BeSus"
                    font_style:"H4"
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)
                    MDLabel:
                        text:"Home"
                        text_size:None,None
                        adaptive_width:True
                    MDIcon:
                        icon:'chevron-down'

            MDIconButton:
                icon:"images/notification.png"

<ElementCard>:
    md_bg_color:70/255,120/255,13/255
    padding:dp(15)
    spacing:dp(15)
    radius:dp(25)
    ripple_behavior: True
    image:''
    text:""
    items_count:""
    subtext:''

    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style:"H6"
        MDLabel:
            halign:"center"
            font_style:"Caption"
            text:root.subtext
        MDLabel:
            halign:"center"
            text:root.items_count
