<FriendCard>:
    md_bg_color:165/255,202/255,122/255
    line_color:(0.2, 0.2, 0.2, 0.8)
    style:"elevated"
    shadow_softness:4
    shadow_offset:(2, 2) 
    padding:dp(15)
    spacing:dp(15)
    radius:dp(25)
    ripple_behavior: False
    image:'images/pfp.png'
    name:""
    points:""

    orientation:'horizontal'
    Image:
        source:root.image
    MDLabel:
        halign:"left"
        text:root.name
        font_style:"H4"
    MDLabel:
        halign:"center"
        text:root.points
        font_style:"H4"

<NewChallengeCard>:
    md_bg_color:165/255,202/255,122/255
    line_color:(0.2, 0.2, 0.2, 0.8)
    style:"elevated"
    shadow_softness:4
